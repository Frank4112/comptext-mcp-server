FROM python:3.11-slim

WORKDIR /app

# Install dependencies
COPY requirements-rest.txt .
RUN pip install --no-cache-dir -r requirements-rest.txt

# Copy source
COPY src/ /app/src/
COPY rest_api_wrapper.py /app/

# Set Python path
ENV PYTHONPATH=/app/src

# Expose port
EXPOSE 8000

# Run
CMD ["uvicorn", "rest_api_wrapper:app", "--host", "0.0.0.0", "--port", "8000"]
